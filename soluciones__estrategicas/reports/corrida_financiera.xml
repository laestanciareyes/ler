<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_corrida_financiera_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <center><strong><h3>Corrida Financiera</h3></strong></center>
                        
                        <p></p>
                        <table width="100%">
                            <tr>
                                <td>
                                    Monto Prestado: 
                                </td>
                                <td>
                                    <t t-esc="doc.montoprestado" widget="monetary"/>
                                </td>
                                <td>
                                    Contado: 
                                </td>
                                <td>
                                    <t t-esc="doc.montoaprobado" widget="monetary"/>
                                </td>
                                
                            </tr>
                            <tr>
                                <td>
                                    Interes: 
                                </td>
                                <td>
                                    <t t-esc="doc.porcentajedeinteresdelcredito"/>
                                </td>
                                <td>
                                    Prima: 
                                </td>
                                <td>
                                    <t t-esc="doc.montoanticipo"/>
                                </td>
                                
                            </tr>
                            
                            <tr>
                                <td>
                                    Periodos Mensuales: 
                                </td>
                                <td>
                                    <t t-esc="doc.numerodecuotas"/>
                                </td>
                                <td>
                                    Saldo despu√©s de prima: 
                                </td>
                                <td>
                                    <t t-esc="doc.saldodespuesanticipo" widget="monetary" t-options='{"widget": "monetary","decimal_places":2}'/>
                                </td>
                                
                            </tr>
                        </table>
                        <p></p>
                    </div>
                    
                </t>
            </t>
        </t>
    </template>
</odoo>